{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "TfStateListBucket",
      "Effect": "Allow",
      "Action": ["s3:ListBucket", "s3:GetBucketLocation"],
      "Resource": "arn:aws:s3:::bedrock-tfstate-541801281384-025-1181"
    },
    {
      "Sid": "TfStateObjectsRW",
      "Effect": "Allow",
      "Action": ["s3:GetObject", "s3:PutObject", "s3:DeleteObject"],
      "Resource": "arn:aws:s3:::bedrock-tfstate-541801281384-025-1181/project-bedrock/*"
    },
    {
      "Sid": "TfStateDynamoLock",
      "Effect": "Allow",
      "Action": [
        "dynamodb:DescribeTable",
        "dynamodb:GetItem",
        "dynamodb:PutItem",
        "dynamodb:DeleteItem",
        "dynamodb:UpdateItem"
      ],
      "Resource": "arn:aws:dynamodb:us-east-1:541801281384:table/bedrock-terraform-locks"
    }
  ]
}
